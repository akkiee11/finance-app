<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %><!DOCTYPE html><html lang="en"><head>    <meta charset="UTF-8">    <title>View Record</title>    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">    <style>      .wrapper {        width: 600px;        margin: 0 auto;      }    </style></head><body><div class="wrapper">    <div class="container-fluid">        <div class="row">            <div class="col-md-12">                <h1 class="mt-5 mb-3">View Ideal Portfolio</h1>                <div class="form-group">                    <label>Name</label>                    <p><b>${ideal_portfolio.name}</b></p>                </div>                <div class="form-group">                    <label>Generated time</label>                    <p><b>${ideal_portfolio.timestamp}</b></p>                </div>                <div class="form-group">                    <label>Capital</label>                    <p><b>${ideal_portfolio.amount}</b></p>                </div>                <div class="form-group">                    <label>Investing Mode</label>                    <p><b>${ideal_portfolio.mode}</b></p>                </div>                <div class="form-group">                    <label>Recommendations</label>                    <table class="table table-bordered table-striped">                        <thead>                        <tr>                            <th>Stock Name</th>                            <th>Stock Type</th>                            <th>Percentage of portfolio</th>                        </tr>                        </thead>                        <tbody>                        <c:forEach var="recommendation" items="${ideal_portfolio.recommendations}">                            <tr>                                <td>${recommendation.stock}</td>                                <td>${recommendation.stockType}</td>                                <td>${recommendation.percentage}</td>                            </tr>                        </c:forEach>                        </tbody>                    </table>                </div>                <p><a href="${pageContext.request.contextPath}/ideal-portfolio" class="btn btn-primary">Back</a></p>            </div>        </div>    </div></div></body></html>